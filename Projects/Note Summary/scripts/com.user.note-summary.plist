<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.user.note-summary</string>

    <key>ProgramArguments</key>
    <array>
        <!-- Update this path to your Python interpreter in the virtual environment -->
        <string>/Users/felixbrand/Projects/Note Summary/venv/bin/python</string>
        <string>-m</string>
        <string>src.main</string>
    </array>

    <key>WorkingDirectory</key>
    <string>/Users/felixbrand/Projects/Note Summary</string>

    <key>StartInterval</key>
    <!-- Run every 5 minutes (300 seconds) -->
    <integer>300</integer>

    <key>StandardOutPath</key>
    <string>/Users/felixbrand/Projects/Note Summary/data/note-summary.log</string>

    <key>StandardErrorPath</key>
    <string>/Users/felixbrand/Projects/Note Summary/data/note-summary-error.log</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin</string>
    </dict>

    <!-- Don't run at load, wait for interval -->
    <key>RunAtLoad</key>
    <false/>
</dict>
</plist>
